<!DOCTYPE html>
<html lang="en">
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <head>
        <%- include('./partials/head') %>
    </head>
    <body
        onload="isAuthenticated(); displayProfile(); startTipRotation()"
        x-data="{ page: 'reminders', 'loaded': true, 'darkMode': false, 'stickyMenu': false, 'sidebarToggle': false, 'scrollTop': false }"
        x-init="
         darkMode = JSON.parse(localStorage.getItem('darkMode'));
         $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
        :class="{'dark bg-gray-900': darkMode === true}"
    >
        <%- include('./partials/preloader') %>

        <!-- ===== Page Wrapper Start ===== -->
        <div class="flex h-screen overflow-hidden">
            <%- include('./partials/sidebar') %>

            <!-- ===== Content Area Start ===== -->
            <div
                class="relative flex flex-1 flex-col overflow-x-hidden overflow-y-auto"
            >
                <!-- Small Device Overlay Start -->
                <div
                    :class="sidebarToggle ? 'block xl:hidden' : 'hidden'"
                    class="fixed z-50 h-screen w-full bg-gray-900/50"
                ></div>
                <!-- Small Device Overlay End -->

                <%- include('./partials/header') %>

                <!-- ===== Main Content Start ===== -->
                <main>
                    <div
                        class="mx-auto max-w-(--breakpoint-2xl) p-4 md:p-6 space-y-8"
                    >
                        <!-- Breadcrumb Start -->
                        <div x-data="{ pageName: `Alerts & Reminders`}">
                            <div
                                class="flex flex-wrap items-center justify-between gap-3 pb-6"
                            >
                                <h2
                                    class="text-xl font-semibold text-gray-800 dark:text-white/90"
                                    x-text="pageName"
                                ></h2>
                                <nav>
                                    <ol class="flex items-center gap-1.5">
                                        <li>
                                            <a
                                                class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400"
                                                href="/dashboard"
                                            >
                                                Home
                                                <svg
                                                    class="stroke-current"
                                                    width="17"
                                                    height="16"
                                                    viewBox="0 0 17 16"
                                                    fill="none"
                                                    xmlns="http://www.w3.org/2000/svg"
                                                >
                                                    <path
                                                        d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                                        stroke=""
                                                        stroke-width="1.2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    />
                                                </svg>
                                            </a>
                                        </li>
                                        <li
                                            class="text-sm text-gray-800 dark:text-white/90"
                                            x-text="pageName"
                                        ></li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                        <!-- Breadcrumb End -->

                        <!-- ====== NEW Alert Form Section Start -->
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-1">
                            <div class="space-y-6">
                                <div
                                    class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]"
                                >
                                    <div class="px-5 py-4 sm:px-6 sm:py-5">
                                        <h3
                                            class="text-base font-medium text-gray-800 dark:text-white/90"
                                        >
                                            New Reminder
                                        </h3>
                                    </div>
                                    <form id="add-reminder-form">
                                        <div
                                            class="space-y-6 border-t border-gray-100 p-5 sm:p-6 dark:border-gray-800"
                                        >
                                            <!-- Car SELECTION -->
                                            <div>
                                                <label
                                                    class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"
                                                >
                                                    Car
                                                </label>
                                                <div
                                                    x-data="{ isOptionSelected: false }"
                                                    class="relative z-20 bg-transparent"
                                                >
                                                    <select
                                                        id="car-id"
                                                        name="car_id"
                                                        class="car-id required dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 pr-11 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                                        :class="isOptionSelected && 'text-gray-800 dark:text-white/90'"
                                                        @change="isOptionSelected = true"
                                                    >
                                                        <option
                                                            value=""
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Select Your Car
                                                        </option>
                                                    </select>
                                                    <span
                                                        class="pointer-events-none absolute top-1/2 right-4 z-30 -translate-y-1/2 text-gray-500 dark:text-gray-400"
                                                    >
                                                        <svg
                                                            class="stroke-current"
                                                            width="20"
                                                            height="20"
                                                            viewBox="0 0 20 20"
                                                            fill="none"
                                                            xmlns="http://www.w3.org/2000/svg"
                                                        >
                                                            <path
                                                                d="M4.79175 7.396L10.0001 12.6043L15.2084 7.396"
                                                                stroke=""
                                                                stroke-width="1.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                            />
                                                        </svg>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Reminder Category -->
                                            <div>
                                                <label
                                                    class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"
                                                >
                                                    Type Of Reminder
                                                </label>
                                                <div
                                                    x-data="{ isOptionSelected: false }"
                                                    class="relative z-20 bg-transparent"
                                                >
                                                    <select
                                                        id="reminder-type"
                                                        name="reminder_type"
                                                        class="required dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 pr-11 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                                        :class="isOptionSelected && 'text-gray-800 dark:text-white/90'"
                                                        @change="isOptionSelected = true"
                                                    >
                                                        <option
                                                            value=""
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Select Reminder Type
                                                        </option>
                                                        <option
                                                            value="Default"
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Default
                                                        </option>
                                                        <option
                                                            value="Custom"
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Custom
                                                        </option>
                                                    </select>
                                                    <span
                                                        class="pointer-events-none absolute top-1/2 right-4 z-30 -translate-y-1/2 text-gray-500 dark:text-gray-400"
                                                    >
                                                        <svg
                                                            class="stroke-current"
                                                            width="20"
                                                            height="20"
                                                            viewBox="0 0 20 20"
                                                            fill="none"
                                                            xmlns="http://www.w3.org/2000/svg"
                                                        >
                                                            <path
                                                                d="M4.79175 7.396L10.0001 12.6043L15.2084 7.396"
                                                                stroke=""
                                                                stroke-width="1.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                            />
                                                        </svg>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Reminder -->
                                            <div
                                                id="default-reminder-wrapper"
                                                style="display: none"
                                            >
                                                <label
                                                    class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"
                                                >
                                                    Reminder
                                                </label>
                                                <div
                                                    x-data="{ isOptionSelected: false }"
                                                    class="relative z-20 bg-transparent"
                                                >
                                                    <select
                                                        id="default-reminder"
                                                        class="required dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 pr-11 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                                        :class="isOptionSelected && 'text-gray-800 dark:text-white/90'"
                                                        @change="isOptionSelected = true"
                                                    >
                                                        <option
                                                            value=""
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Select A Reminder
                                                        </option>
                                                        <option
                                                            value="Scheduled Maintenance"
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Scheduled
                                                            Maintenance
                                                        </option>
                                                        <option
                                                            value="Registration & Insurance Renewals"
                                                            class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                                        >
                                                            Registration &
                                                            Insurance Renewals
                                                        </option>
                                                    </select>
                                                    <span
                                                        class="pointer-events-none absolute top-1/2 right-4 z-30 -translate-y-1/2 text-gray-500 dark:text-gray-400"
                                                    >
                                                        <svg
                                                            class="stroke-current"
                                                            width="20"
                                                            height="20"
                                                            viewBox="0 0 20 20"
                                                            fill="none"
                                                            xmlns="http://www.w3.org/2000/svg"
                                                        >
                                                            <path
                                                                d="M4.79175 7.396L10.0001 12.6043L15.2084 7.396"
                                                                stroke=""
                                                                stroke-width="1.5"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                            />
                                                        </svg>
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Custom Reminder Input -->
                                            <div
                                                id="custom-reminder-wrapper"
                                                style="display: none"
                                            >
                                                <label
                                                    class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"
                                                >
                                                    Custom Reminder Input
                                                </label>
                                                <input
                                                    id="custom-reminder"
                                                    type="text"
                                                    placeholder="Custom Reminder Input"
                                                    class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                                />
                                            </div>

                                            <!-- Reminder Interval -->
                                            <div>
                                                <label
                                                    class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"
                                                >
                                                    Reminder Interval (In
                                                    Minutes)
                                                </label>
                                                <input
                                                    id="interval-in-minutes"
                                                    name="interval_in_minutes"
                                                    type="number"
                                                    placeholder="Numeric"
                                                    class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                                />
                                            </div>
                                            <button
                                                type="submit"
                                                class="inline-flex items-center gap-2 px-4 py-3 text-sm font-medium text-white transition rounded-lg bg-brand-500 shadow-theme-xs hover:bg-brand-600"
                                            >
                                                Create Reminder
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- ====== NEW CAR Form Section End -->

                        <!-- ====== Table Section Start ===== -->
                        <div
                            class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]"
                        >
                            <div class="px-5 py-4 sm:px-6 sm:py-5">
                                <h3
                                    class="text-base font-medium text-gray-800 dark:text-white/90"
                                >
                                    My Existing Reminders
                                </h3>
                            </div>
                            <div
                                class="border-t border-gray-100 p-5 dark:border-gray-800 sm:p-6 existing-reminders"
                            ></div>
                        </div>
                    </div>
                </main>
                <!-- ===== Main Content End ===== -->
            </div>
            <!-- ===== Content Area End ===== -->
        </div>
        <!-- ===== Page Wrapper End ===== -->

        <!-- BEGIN MODAL -->
        <div
            id="reminder-edit-modal"
            x-show="$store.modals.isProfileInfoModal"
            class="fixed inset-0 flex items-center justify-center p-5 overflow-y-auto z-99999"
        >
            <div
                @click="$store.modals.isProfileInfoModal = false"
                class="modal-close-btn fixed inset-0 h-full w-full bg-gray-400/50 backdrop-blur-[32px]"
            ></div>
            <div
                @click.outside="$store.modals.isProfileInfoModal = false"
                class="no-scrollbar relative w-full max-w-[700px] overflow-y-auto rounded-3xl bg-white p-4 dark:bg-gray-900 lg:p-11"
            >
                <!-- close btn -->
                <button
                    @click="$store.modals.isProfileInfoModal = false"
                    class="transition-color absolute right-5 top-5 z-999 flex h-11 w-11 items-center justify-center rounded-full bg-gray-100 text-gray-400 hover:bg-gray-200 hover:text-gray-600 dark:bg-gray-700 dark:bg-white/[0.05] dark:text-gray-400 dark:hover:bg-white/[0.07] dark:hover:text-gray-300"
                >
                    <svg
                        class="fill-current"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            fill-rule="evenodd"
                            clip-rule="evenodd"
                            d="M6.04289 16.5418C5.65237 16.9323 5.65237 17.5655 6.04289 17.956C6.43342 18.3465 7.06658 18.3465 7.45711 17.956L11.9987 13.4144L16.5408 17.9565C16.9313 18.347 17.5645 18.347 17.955 17.9565C18.3455 17.566 18.3455 16.9328 17.955 16.5423L13.4129 12.0002L17.955 7.45808C18.3455 7.06756 18.3455 6.43439 17.955 6.04387C17.5645 5.65335 16.9313 5.65335 16.5408 6.04387L11.9987 10.586L7.45711 6.04439C7.06658 5.65386 6.43342 5.65386 6.04289 6.04439C5.65237 6.43491 5.65237 7.06808 6.04289 7.4586L10.5845 12.0002L6.04289 16.5418Z"
                            fill=""
                        />
                    </svg>
                </button>
                <div class="px-2 pr-14">
                    <h4
                        class="mb-2 text-2xl font-semibold text-gray-800 dark:text-white/90"
                    >
                        Edit Reminder Status Details
                    </h4>
                    <p
                        class="mb-6 text-sm text-gray-500 dark:text-gray-400 lg:mb-7"
                    >
                        Update your reminder status details to keep your
                        reminder info up-to-date.
                    </p>
                </div>
                <form id="reminder-update-form" class="flex flex-col">
                    <div
                        class="custom-scrollbar h-[450px] overflow-y-auto px-2"
                    >
                        <div class="">
                            <h5
                                class="mb-5 text-lg font-medium text-gray-800 dark:text-white/90 lg:mb-6"
                            >
                                Reminder Status Information
                            </h5>

                            <div
                                class="grid grid-cols-1 gap-x-6 gap-y-5 lg:grid-cols-2"
                            >
                                <div class="col-span-2">
                                    <label
                                        class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400"
                                    >
                                        Reminder Status
                                    </label>
                                    <div
                                        x-data="{ isOptionSelected: false }"
                                        class="relative z-20 bg-transparent"
                                    >
                                        <select
                                            id="reminder_status"
                                            name="reminder_status"
                                            class="reminder_status required dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 pr-11 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                            :class="isOptionSelected && 'text-gray-800 dark:text-white/90'"
                                            @change="isOptionSelected = true"
                                        >
                                            <option
                                                value=""
                                                class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                            >
                                                Change Your Reminder Status
                                            </option>
                                            <option
                                                value="Active"
                                                class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                            >
                                                Active
                                            </option>
                                            <option
                                                value="Inactive"
                                                class="text-gray-700 dark:bg-gray-900 dark:text-gray-400"
                                            >
                                                Inactive
                                            </option>
                                        </select>
                                        <span
                                            class="pointer-events-none absolute top-1/2 right-4 z-30 -translate-y-1/2 text-gray-500 dark:text-gray-400"
                                        >
                                            <svg
                                                class="stroke-current"
                                                width="20"
                                                height="20"
                                                viewBox="0 0 20 20"
                                                fill="none"
                                                xmlns="http://www.w3.org/2000/svg"
                                            >
                                                <path
                                                    d="M4.79175 7.396L10.0001 12.6043L15.2084 7.396"
                                                    stroke=""
                                                    stroke-width="1.5"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                />
                                            </svg>
                                        </span>
                                    </div>
                                </div>
                                <input
                                    type="hidden"
                                    id="reminder_id"
                                    name="reminder_id"
                                    class="required"
                                />
                            </div>
                        </div>
                    </div>
                    <div
                        class="flex items-center gap-3 px-2 mt-6 lg:justify-end"
                    >
                        <button
                            @click="$store.modals.isProfileInfoModal = false"
                            type="button"
                            class="flex w-full justify-center rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] sm:w-auto"
                        >
                            Close
                        </button>
                        <button
                            type="submit"
                            class="flex w-full justify-center rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white hover:bg-brand-600 sm:w-auto"
                        >
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <%- include('./partials/scripts') %>

        <script>
            document.addEventListener("alpine:init", () => {
                Alpine.store("modals", {
                    isProfileInfoModal: false,
                });
            });
        </script>
        <script src="/assets/js/modules/alerts-and-reminders.js"></script>
    </body>
</html>
